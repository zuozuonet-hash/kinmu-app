rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // winter-shifts コレクションのルール
    match /winter-shifts/{teacherId} {
      // 職員ドキュメントへの読み書き許可
      allow read, write: if true;  // ⚠️ 開発用：本番環境では認証を追加してください
      
      // records サブコレクションのルール
      match /records/{recordId} {
        // レコードへの読み書き許可
        allow read, write: if true;  // ⚠️ 開発用：本番環境では認証を追加してください
      }
    }
  }
}

